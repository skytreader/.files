# Takes in a filename of a file _inside_ the dotfiles repo
function transfer() {
    cp ~/.$1 ~/$1.bak
    cp $1 ~/.$1
    sudo cp /root/.$1 /root/.$1.bak
    sudo cp $1 /root/.$1
}

transfer bashrc
transfer bash_personal
echo "Now do \`source ~/.bashrc\` for your changes to take effect in current session."
