#cp ~/.bash_personal ~/bash_personal.bak
#cp bash_personal ~/.bash_personal
#cp ~/.bash_aliases ~/bash_aliases.bak
#cp bash_aliases ~/.bash_aliases
echo "Now do \`source ~/.bashrc\` for your changes to take effect in current session."
