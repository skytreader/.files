# Takes in a filename of a file _inside_ the dotfiles repo
function transfer() {
    cp ~/.$1 ~/$1.bak
    cp $1 ~/.$1
    sudo cp /root/.$1 /root/.$1.bak
    sudo cp $1 /root/.$1
}

transfer bashrc
transfer bash_personal
transfer bash_aliases
#cp ~/.bashrc ~/bashrc.bak
