# vim: set ft=sh:
# For Kalibrr

check_kcl_context(){
    kcl_context="$(kubectl config current-context)"
    
    if [ "$kcl_context" != "" ]; then
        PS1='[$kcl_context]${debian_chroot:+($debian_chroot)}\u@\h:\W\$ '
    else
        PS1='${debian_chroot:+($debian_chroot)}\u@\h:\W\$ '
    fi
}

trap check_kcl_context DEBUG
